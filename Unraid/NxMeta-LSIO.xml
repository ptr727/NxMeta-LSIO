<?xml version="1.0"?>
<Container version="2">
  <Beta>True</Beta>
  <Name>NxMetaLSIO</Name>
  <Repository>ptr727/nxmeta-lsio</Repository>
  <Registry>https://hub.docker.com/r/ptr727/nxmeta-lsio/</Registry>
  <GitHub>https://github.com/ptr727/NxMeta-LSIO</GitHub>
  <License>MIT</License>
  <Project>https://github.com/ptr727/NxMeta-LSIO</Project>
  <Description>NxMeta IPVMS Docker based on LinuxServer</Description>
  <Overview>NxMeta IPVMS Docker based on LinuxServer</Overview>
  <Category>HomeAutomation: Security: Status:Beta</Category>
  <WebUI>http://[IP]:[PORT:7001]</WebUI>
  <TemplateURL>https://github.com/ptr727/NxMeta-LSIO/Unraid</TemplateURL>
  <Icon>https://github.com/ptr727/NxMeta-LSIO/raw/master/Unraid/NxMeta.png</Icon>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/nxmeta-lsio</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/nvr/nxmeta-media</HostDir>
      <ContainerDir>/media</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/nvr/nxmeta-archive</HostDir>
      <ContainerDir>/archive</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>99</Value>
      <Name>PUID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>PGID</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="User Id" Target="PUID" Default="" Mode="" Description="Container Variable: PUID" Type="Variable" Display="always" Required="false" Mask="false">99</Config>
  <Config Name="Group Id" Target="PGID" Default="" Mode="" Description="Container Variable: PGID" Type="Variable" Display="always" Required="false" Mask="false">100</Config>
  <Config Name="Configuration Path" Target="/config" Default="/mnt/user/appdata/nxmeta-lsio" Mode="rw" Description="Container Path: /config" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/nxmeta-lsio</Config>
  <Config Name="Media Recording Path" Target="/media" Default="" Mode="rw" Description="Container Path: /media" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/nvr/nxmeta-media</Config>
  <Config Name="Media Backup Archive Path" Target="/archive" Default="" Mode="rw" Description="Container Path: /archive" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/nvr/nxmeta-archive</Config>
</Container>
